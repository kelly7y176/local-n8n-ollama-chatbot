# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
# IMPORTANT: Change this to a secure, random string (e.g., 32 characters)
N8N_ENCRYPTION_KEY=N8N_ENCRYPTION_KEY=change_this_encryption_key

# Connection to local Ollama application running on your macOS
OLLAMA_HOST=http://host.docker.internal:11434

# PostgreSQL Database Configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
# IMPORTANT: Change this to a secure password
DB_POSTGRESDB_PASSWORD=DB_POSTGRESDB_PASSWORD=change_this_db_password

# Timezone
GENERIC_TIMEZONE=Europe/Berlin 
# Change 'Europe/Berlin' to your actual timezone (e.g., America/New_York)
